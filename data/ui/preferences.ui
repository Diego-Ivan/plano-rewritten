<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkAdjustment" id="decimals_adjustment">
    <property name="lower">3</property>
    <property name="upper">10</property>
    <property name="step_increment">1</property>
    <property name="page_increment">3</property>
  </object>
  <template class="PlanoPreferences" parent="AdwPreferencesWindow">
    <property name="default-height">358</property>
    <property name="default-width">396</property>
    <child>
      <object class="AdwPreferencesPage">
        <property name="title">Preferences</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Appereance</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Use system default</property>
                <property name="subtitle" translatable="yes">Whether or not use system default dark/light theme preferences</property>
                <property name="icon_name">preferences-other-symbolic</property>
                <child>
                  <object class="GtkSwitch" id="switcher_use_default">
                    <property name="can_focus">0</property>
                    <property name="valign">center</property>
                    <signal name="notify::active" handler="use_default_active_changed_cb" swapped="no"/>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Prefer dark theme for this app</property>
                <property name="icon_name">weather-clear-symbolic</property>
                <child>
                  <object class="GtkSwitch" id="switcher_prefer_dark">
                    <property name="can_focus">0</property>
                    <property name="valign">center</property>
                    <signal name="notify::active" handler="prefer_dark_active_changed_cb" swapped="no"/>
                    <signal name="notify::sensitive" handler="prefer_dark_sensitive_changed_cb" swapped="no"/>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Math</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Decimals</property>
                <property name="subtitle" translatable="yes">The number of decimals result entries must show</property>
                <property name="icon_name">accessories-calculator-symbolic</property>
                <child>
                  <object class="GtkSpinButton" id="decimals_spin_button">
                    <property name="can_focus">0</property>
                    <property name="valign">center</property>
                    <property name="adjustment">decimals_adjustment</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
