<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkAdjustment" id="decimals_adjustment">
    <property name="lower">3</property>
    <property name="upper">10</property>
    <property name="step_increment">1</property>
    <property name="page_increment">3</property>
  </object>
  <template class="PlanoPreferences" parent="AdwPreferencesWindow">
    <property name="default-height">324</property>
    <property name="default-width">360</property>
    <child>
      <object class="AdwPreferencesPage">
        <property name="icon_name">preferences-other-symbolic</property>
        <property name="title">Preferences</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Appereance</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Dark theme</property>
                <property name="icon_name">display-brightness-symbolic</property>
                <child>
                  <object class="GtkSwitch" id="darkThemeSwitch">
                    <property name="can_focus">0</property>
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Math</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Decimals</property>
                <property name="subtitle" translatable="yes">The number of decimals result entries may show</property>
                <child>
                  <object class="GtkSpinButton" id="decimalsSpinButton">
                    <property name="can_focus">0</property>
                    <property name="valign">center</property>
                    <property name="adjustment">decimals_adjustment</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
